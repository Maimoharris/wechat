<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ChatterBox - Modern Chat Application</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="app-container">
    <header class="main-header">
      <div class="container">
        <nav class="navbar">
          <div class="logo">
            <a href="/">
              <i class="fa-solid fa-comments"></i>
              <span>ChatterBox</span>
            </a>
          </div>
          <div class="nav-links">
            <% if (locals.user) { %>
              <a href="/chats" class="nav-link">
                <i class="fa-solid fa-message"></i> Chats
              </a>
              <a href="/users" class="nav-link">
                <i class="fa-solid fa-users"></i> Users
              </a>
              <div class="user-dropdown">
                <button class="dropdown-btn">
                  <img src="<%= user.profilePicture %>" alt="Profile" class="avatar-small">
                  <span><%= user.username %></span>
                  <i class="fa-solid fa-chevron-down"></i>
                </button>
                <div class="dropdown-content">
                  <a href="/users/profile">
                    <i class="fa-solid fa-user"></i> Profile
                  </a>
                  <a href="/auth/logout">
                    <i class="fa-solid fa-right-from-bracket"></i> Logout
                  </a>
                </div>
              </div>
            <% } else { %>
              <a href="/auth/login" class="nav-link">Login</a>
              <a href="/auth/register" class="btn-primary">Sign Up</a>
            <% } %>
          </div>
          <button class="mobile-menu-btn">
            <i class="fa-solid fa-bars"></i>
          </button>
        </nav>
      </div>
    </header>

    <main class="main-content">
      <%- body %>
    </main>

    <footer class="main-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-logo">
            <i class="fa-solid fa-comments"></i>
            <span>ChatterBox</span>
          </div>
          <div class="footer-links">
            <div class="footer-section">
              <h4>Company</h4>
              <ul>
                <li><a href="#">About Us</a></li>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Terms of Service</a></li>
              </ul>
            </div>
            <div class="footer-section">
              <h4>Support</h4>
              <ul>
                <li><a href="#">Help Center</a></li>
                <li><a href="#">Contact Us</a></li>
                <li><a href="#">FAQ</a></li>
              </ul>
            </div>
            <div class="footer-section">
              <h4>Follow Us</h4>
              <div class="social-links">
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
                <a href="#"><i class="fa-brands fa-facebook"></i></a>
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                <a href="#"><i class="fa-brands fa-linkedin"></i></a>
              </div>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2025 ChatterBox. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </div>

  <script src="/js/main.js"></script>
  <% if (locals.user) { %>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      
      // Connect user when logged in
      socket.emit('user_connected', '<%= user.id %>');
      
      // Listen for user status changes
      socket.on('user_status_change', (data) => {
        const userStatusIndicators = document.querySelectorAll(`.user-status[data-user-id="${data.userId}"]`);
        userStatusIndicators.forEach(indicator => {
          indicator.classList.remove('online', 'offline');
          indicator.classList.add(data.status);
        });
      });
    </script>
  <% } %>
</body>
</html>